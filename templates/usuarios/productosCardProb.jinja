{% set img = 'src/img' + producto['Id']|string + '_1.jpg' %}
<img src="{{ url_for('static', filename = img) }}" style="width:6em; height:6em;">
<div class="position-absolute border  bg-white py-1 px-2" style="bottom: 5%; left: 5%; overflow:hidden; max-width:90%">
    <p class="mb-0 text-start" style="font-size: 12px;letter-spacing:1px;white-space:break-spaces">{{ producto['Nombre'] }} <span style="color: rgb(170, 170, 170);">#{{ producto['Id'] }}</span></p>
    <p class="mb-0 text-start" style="font-size: 11px;letter-spacing:1px;font-weight: bold;">${{ producto['Precio u.'] }}</p>
</div>