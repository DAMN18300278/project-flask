{% set productosOjos =[] %}
{% set productosPiel =[] %}
{% set productosSkinCare =[] %}
{% set productosAccesorios =[] %}
{% set productosLabios = [] %}

{% for producto in recomendados %}
    {% if producto['Categoria'] == 'labios' %}
        {% set _ = productosLabios.append(producto) %}
    {% endif %}
    {% if producto['Categoria'] == 'piel' %}
        {% set _ = productosPiel.append(producto) %}
    {% endif %}
    {% if producto['Categoria'] == 'ojos' %}
        {% set _ = productosOjos.append(producto) %}
    {% endif %}
    {% if producto['Categoria'] == 'accesorios' %}
        {% set _ = productosAccesorios.append(producto) %}
    {% endif %}
    {% if producto['Categoria'] == 'skinCare' %}
        {% set _ = productosSkinCare.append(producto) %}
    {% endif %}
{% endfor %}

{% for categoria, productos in {
    'labios': productosLabios[:3],
    'piel': productosPiel[:3],
    'ojos': productosOjos[:3],
    'accesorios': productosAccesorios[:3],
    'skinCare': productosSkinCare[:3]
    }.items() %}
    <h2>{{ categoria }}</h2>
    {% for producto in productos %}
        <div class="snap-section position-relative d-flex align-items-center flex-column" style="overflow: hidden;">
            {% set img = 'src/img' + producto['Id']|string + '_1.jpg' %}
            <img src="{{ url_for('static', filename = img) }}">
            <div>
                <p class="product-text my-4 w-75 mx-auto">{{ producto['Nombre'] }}</p>
                <p style="font-size: 13px; color:rgb(70, 70, 70)">{{ producto['Marca'] }}</p>
                <button class="btn btn-outline-danger btn-product mx-auto mb-4" type="button"
                data-bs-toggle="modal" 
                data-bs-target="#infoProducto" 
                data-producto="{{ producto }}"
                data-ingredientes="{{ ingredientes }}"
                data-alergias="{{ alergias }}">Detalles</button>
            </div>
        </div>
    {% endfor %}
{% endfor %}
