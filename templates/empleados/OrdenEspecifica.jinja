{% extends "empleados/empleadosMaster.jinja" %}
{% block head %}
    {{ super() }}
{% endblock %}

{% block content %}
    <div class="p-5">
        <h1>Carrito de compras de la orden: {{id}}</h1>
        <h1>Total: ${{ total }}</h1>
        {% set total = 0 %}
        {% for row in range(1, 5) %}
            {% include "empleados/ordenProducto.jinja"%}
            {% set cantidad = 4 %}
            {% set precio_unitario = 39.99 %}
            {% set precio_total = cantidad * precio_unitario %}
            {% set total = total + precio_total %}
        {% endfor %}
    </div>

{% endblock content %}