{% extends "empleados/empleadosMaster.jinja" %}
{% block head %}
    {{ super() }}
{% endblock %}

{% block content %}

    <div class="p-3 py-4">
        <div class="pt-3 d-flex align-items-center justify-content-center position-relative">
            <a href="../administradores" class="position-absolute" style="top:0;left:0;" >
                <i class="text-black bi bi-arrow-left" style="font-size: 25px;"></i>
            </a>
            <h1 style="font-size: 25px;">Empleados</h1>
        </div>
        <div class="input-group justify-content-center">
            <div class="form-outline">
                <input type="search" id="search" class="form-control" placeholder="search"/>
            </div>
            <button type="button" class="btn" style="background-color: transparent; box-shadow:none">
                <i class="bi bi-search"></i>
            </button>
        </div>
        <div class="table table-hover containerEmp ">
        <table >
            <thead style="padding: 5px;">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Puesto</th>
                    <th>Editar</th>
                    {%if tipo == 3%}
                    <th>Borrar</th>
                    {%endif%}
                </tr>
            </thead>
            <tbody>
            {%for row in resultados%}
                <tr>
                    <td>{{row[0]}}</td>
                    <td>{{row[1]}}</td>
                    <td>{{row[2]}}</td>
                    <td>
                        <a href="editarEmpleados/{{row[0]}}"> 
                            <lord-icon
                                src="https://cdn.lordicon.com/wloilxuq.json"
                                trigger="click"
                                style="width:26px;height:26px">
                            </lord-icon> 
                        </a>
                    </td>
                    {%if tipo == 3%}
                    <td> 
                        <a href="BorrarEmpleados/{{row[0]}}">
                            <lord-icon
                                src="https://cdn.lordicon.com/jmkrnisz.json"
                                trigger="click"
                                style="width:26px;height:26px" onclick="">
                            </lord-icon> 
                        </a>
                    </td>
                    {%endif%}
                </tr>
            {% endfor%}
            </tbody>
        </table>
        </div>
        <div>
            <a href="editarEmpleados"><button class="btn btn-success">AÃ±adir</button></a>
        </div>
    </div>
{% endblock %}